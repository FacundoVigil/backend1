<h1>Lista de Productos</h1>

<ul id="listaProductos">
  {{#each products}}
    <li>
      <strong>{{this.title}}</strong><br>
      Precio: ${{this.price}}<br>
      Categoría: {{this.category}}<br>
      Stock: {{this.stock}}<br>

      <a href="/products/{{this._id}}?cid={{../cartId}}">
        <button>Ver Detalles</button>
      </a>


      <form action="/api/carts/{{../cartId}}/products/{{this._id}}" method="POST" style="display:inline;">
        <button type="submit">Agregar al carrito</button>
      </form>
    </li>
    <hr>
  {{/each}}
</ul>

<div>
  {{#if prevLink}}
    <a href="{{prevLink}}">⬅️ Página anterior</a>
  {{/if}}

  <span> Página {{page}} de {{totalPages}} </span>

  {{#if nextLink}}
    <a href="{{nextLink}}">Página siguiente ➡️</a>
  {{/if}}
</div>

